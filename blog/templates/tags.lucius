.tags {
   ul {
      list-style-type: none;
      margin: 0;
      li {
         display: inline-block;
         margin-right: 0.2em;
         margin-top: 0.2em;
         background-color: #e5e5e5;
         border: 1px solid #bcbcbc;
         border-radius: 0.4em;
         padding-left: 0.2em;
         padding-right: 0.2em;
      }
      li:last-child {
         margin-right: 0;
      }
   }
}
